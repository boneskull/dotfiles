[extensions]
hgext.extdiff =
shelve=
rebase=
fetch=
strip=
purge=
schemes=
churn=
record=
hggit=~/.hg-git/hggit

[extdiff]
cmd.ksdiff = /usr/local/bin/ksdiff
opts.ksdiff = --changeset --wait --filelist

[ui]
username=Christopher Hiller <chiller@decipherinc.com>
merge = Kaleidoscope
ignore=~/.hgignore_global


[merge-tools]
Kaleidoscope.executable = /usr/local/bin/ksdiff
Kaleidoscope.args = --merge --output $output --base $base -- $local $other

[git]
intree=True

[schemes]
alpha=ssh://source.decipherinc.com//home/branches/alpha/
core=ssh://source.decipherinc.com//home/branches/core/

        "intentPatterns": [
          "(should|all|tests).*(pass|work|be.*working)",
          "(i'?m|i'?ve).*(done|finished|completed)",
          "(it|this).*(works|is.*working|fixed|passes)",
          "ready.*(to|for).*(commit|merge|review)"
        ]
      }
    },


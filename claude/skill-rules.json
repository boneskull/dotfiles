{
  "version": "1.0",
  "description": "Global skill activation rules for boneskull's environment",
  "skills": {
    "superpowers@superpowers-marketplace:test-driven-development": {
      "type": "guardrail",
      "enforcement": "suggest",
      "priority": "critical",
      "description": "Write test first, watch it fail, then implement - NO production code without failing test first",
      "promptTriggers": {
        "keywords": [
          "write test",
          "add test",
          "test for",
          "create test",
          "implement feature",
          "add feature",
          "fix bug",
          "bugfix",
          "TDD"
        ],
        "intentPatterns": [
          "(create|write|add|implement).*(feature|function|method|class)",
          "(fix|repair|resolve).*(bug|issue|problem)",
          "(create|write|add).*test",
          "test.*(feature|function|method)"
        ]
      }
    },

    "superpowers@superpowers-marketplace:systematic-debugging": {
      "type": "guardrail",
      "enforcement": "suggest",
      "priority": "critical",
      "description": "Four-phase debugging framework - root cause investigation BEFORE proposing fixes",
      "promptTriggers": {
        "keywords": [
          "bug",
          "debug",
          "error",
          "not working",
          "broken",
          "failing",
          "test fail",
          "issue",
          "problem",
          "investigate"
        ],
        "intentPatterns": [
          "(fix|debug|solve|investigate).*(bug|error|issue|problem|failure)",
          "(why|what).*(not working|broken|failing|wrong)",
          "(figure out|find out|understand).*why",
          "test.*(fail|failing)"
        ]
      }
    },

    "superpowers@superpowers-marketplace:verification-before-completion": {
      "type": "guardrail",
      "enforcement": "suggest",
      "priority": "critical",
      "description": "Run verification commands BEFORE claiming anything works - evidence before assertions",
